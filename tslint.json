{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "adjacent-overload-signatures": false,
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "max-line-length": false,
        "no-empty-interface": false,
        "interface-over-type-literal": false,
        "no-empty": false,
        "ordered-imports": false,
        "prettier": [
            true,
            {
                "semi": false,
                "singleQuote": true,
                "printWidth": 120,
                "trailingComma": "es5",
                "arrowParens": "avoid"
            }
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "trailing-comma": [
            false
        ],
        "jsdoc-format": false
    },
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ]
}
